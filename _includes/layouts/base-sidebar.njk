---
layout: layouts/base.njk
---

<div class="flex flex-col lg:flex-row-reverse">
  <div class="py-5 px-6 flex flex-col grow gap-2">
    {{ content | safe }}
  </div>

  <div class="flex flex-col py-5 lg:w-[300px] bg-[radial-gradient(ellipse_at_right,#f2f2f2,#ffffff_80%)]">
    <h3 class="flex py-3 px-5 flex-row items-center gap-2 mb-3 bg-gradient-to-r from-[#efefef] to-[#f3f3f3]">
      {% include "icons/tag.svg" %}
      Tags
    </h3>
    <ul class="flex flex-col gap-2 mb-5 ml-5 list-disc pl-5">
      {% for tag in pluginTags | head(10) %}
        <li>
          <a class="link-sidebar" href="/tag/{{ tag.name | slugify }}">{{ tag.name }}</a>
          <span class="count">({{ tag.plugins.length }})</span>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
